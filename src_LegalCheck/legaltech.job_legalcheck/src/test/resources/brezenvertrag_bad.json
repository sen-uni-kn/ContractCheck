{
	"_comment": "Objects allow to implement analyses in software",
	"contract": [
		{
			"ID": "Head1",
			"Index": "1",
			"Text": "$text",
			"Multiplicity": "1",
			"Object": [
				"text:Head"
			],
			"Assignment": [
				"text=Brezenkaufvertrag"
			]
		},
		{
			"ID": "Abschnitt1",
			"Index": "2",
			"Text": "§$para $text",
			"Multiplicity": "*",
			"Object": [
				"text:Head2",
				"para:Clause1"
			],
			"Assignment": [
				"text=Vertragstext",
				"para.Item=1"
			]
		},
		{
			"ID": "Kaufvertrag1",
			"Index": "3",
			"Text": "$absatz Der Verkäufer:in $verkaeufer.Name verkauft die Anteile am Unternehmen $unternehmen.Name an Käufer:in $kaeufer.Name für $preis.Preis €. Die Übergabe des Unternehmens findet am Tag $uebergabe.Frist statt.",
			"Multiplicity": "1",
			"Object": [
                "absatz:Clause2",
				"kaeufer:Person",
				"verkaeufer:Person",
				"unternehmen:Gesellschaft",
				"anteil:Anteil",
				"preis:Preis",
				"ukv:Unternehmenskaufvertrag",
				"eigentum(Date, Gegenstand):Person:Function",
				"eintragung(Person):Boolean:Function",
				"uebergabe:Primaerpflicht",
				"zahlung:Primaerpflicht"
			],
			"Assignment": [
				"absatz.Item=1.1",
				"ukv.Verkaeufer=$verkaeufer",
				"ukv.Kaeufer=$kaeufer",
				"ukv.Closing=$uebergabe.Frist",
				"kaeufer.Name=Max Mustermann",
				"verkaeufer.Name=Anna Musterfrau",
				"preis.Preis=40000",
				"preis.ChangeMin=2000",
				"preis.ChangeMax=8000",
				"unternehmen.Name=Brezenunternehmen GmbH",
				"anteil.Name=Anteile",
				"unternehmen.Anteil=$anteil",
				"ukv.Kaufpreis=$preis",
				"ukv.Kaufgegenstand=$anteil",
				"ukv.Regelung=$uebergabe",
				"ukv.Regelung=$zahlung",
				"ukv.Closing=28",
				"uebergabe.Name=Übergabe",
				"uebergabe.Schuldner=$verkaeufer",
				"uebergabe.Glaeubiger=$kaeufer",
				"uebergabe.Frist=28",
				"uebergabe.Leistung='$Kaufvertrag1_anteil.transfer($kaeufer)'",
				"zahlung.Name=Zahlung",
				"zahlung.Schuldner=$kaeufer",
				"zahlung.Glaeubiger=$verkaeufer",
				"zahlung.Leistung='$Kaufvertrag1_preis.transfer($verkaeufer)'",
				"zahlung.Frist=28"
			]
		},
		{
			"ID": "RuecktrittKaeufer",
			"Index": "4",
			"Text": "$absatz Falls die $pflicht nicht erfuellt wird, darf $rueckK.Schuldner zurücktreten.",
			"Object": [
                "absatz:Clause2",
				"pflicht:$Pflicht",
				"rueckK:Ruecktritt"
			],
			"Assignment": [
				"absatz.Item=1.2",
				"pflicht=$Kaufvertrag1_uebergabe",
				"pflicht.Folge=$rueckK",
				"rueckK.Name=Rücktritt Käufer",
				"rueckK.Pflicht=$pflicht",
				"rueckK.Frist=14",
				"rueckK.Schuldner=$pflicht.Glaeubiger",
				"rueckK.Glaeubiger=$pflicht.Schuldner"
			]
		},
		{
			"ID": "RuecktrittVerkaeufer",
			"Index": "5",
			"Text": "Falls die $pflicht nicht erfuellt wird, darf $rueckV.Schuldner zurücktreten.",
			"Object": [
				"pflicht:$Pflicht",
				"rueckV:Ruecktritt"
			],
			"Assignment": [
				"pflicht=$Kaufvertrag1_zahlung",
				"pflicht.Folge=$rueckV",
				"rueckV.Name=Rücktritt Verkäufer",
				"rueckV.Pflicht=$pflicht",
				"rueckV.Frist=14",
				"rueckV.Schuldner=$pflicht.Glaeubiger",
				"rueckV.Glaeubiger=$pflicht.Schuldner"
			]
		},
		{
			"ID": "GarantieProdukt1",
			"Index": "6",
			"Text": "$garantie.Schuldner garantiert $garantie.glaeubiger, dass das Unternehmen mindestens $anzahl $sache am Tag produziert.",
			"Object": [
				"garantie:Garantie",
				"brezen:Integer",
				"anzahl:Integer",
				"sache:String"
			],
			"Assignment": [
				"garantie.Name=Brezengarantie",
				"garantie.Glaeubiger=$Kaufvertrag1_kaeufer",
				"garantie.Schuldner=$Kaufvertrag1_verkaeufer",
				"garantie.Leistung=GarantieProdukt1_brezen=GarantieProdukt1_anzahl",
				"garantie.Frist=14",
				"Kaufvertrag1_ukv.Regelung=$garantie",
				"sache=Brezen",
				"anzahl=10000"
			]
		},
		{
			"ID": "Nacherfuellung1",
			"Index": "7",
			"Text": "Wird die $pflicht nicht erfüllt, kann $nach.Frist Tage nacherfüllt werden.",
			"Object": [
				"pflicht:$Pflicht",
				"nach:Nacherfuellung"
			],
			"Assignment": [
				"pflicht=$GarantieProdukt1_garantie",
				"pflicht.Folge=$nach",
				"nach.Name=Brezennacherfüllung",
				"nach.Pflicht=$pflicht",
				"nach.Frist=21",
				"nach.Schuldner=$pflicht.Schuldner",
				"nach.Glaeubiger=$pflicht.Glaeubiger"
			]
		},
		{
			"ID": "Schadensersatz1",
			"Index": "8",
			"Text": "Wird die $pflicht nicht erfüllt, wird ab einem Betrag von $ersatz.Min folgender Schadensersatz fällig $ersatz.Schaden",
			"Object": [
				"pflicht:$Pflicht",
				"ersatz:Schadensersatz"
			],
			"Assignment": [
				"pflicht=$GarantieProdukt1_garantie",
				"pflicht.Folge=$ersatz",
				"ersatz.Name=Brezenschadensersatz",
				"ersatz.Pflicht=$pflicht",
				"ersatz.Min=1000",
				"ersatz.Frist=1",
				"ersatz.Preis=$Kaufvertrag1_preis",
				"ersatz.Schaden=((GarantieProdukt1_brezen-GarantieProdukt1_anzahl)/100)*1000",
				"ersatz.Schuldner=$pflicht.Schuldner",
				"ersatz.Glaeubiger=$pflicht.Glaeubiger"
			]
		},
		{
			"ID": "Uebereignet1",
			"Index": "9",
			"Text": "Die Anteile am $eigen.Eigentum ist an $eigen.Eigentuemer sicherheitsübereignet.",
			"Object": [
				"bank:Person",
				"anteil:$Anteil",
				"eigen:EigentumsRecht"
			],
			"Assignment": [
				"bank.Name=Bank",
				"anteil=$Kaufvertrag1_anteil",
				"eigen.Eigentuemer=$bank",
				"eigen.Eigentum=$anteil"
			]
		},
		{
			"ID": "Nach1",
			"Index": "10",
			"Text": "Jede Pflicht in §1 hat einen Nacherfüllung.",
			"Object": [
				"nach:Nacherfuellung"
			],
			"Assignment": [
				"nach.Frist=14",
				"${//Verpflichtung[@id=//Clause1[./Item='1']//*/@ref]}.Folge=$nach"
			]
		}
	]
}
